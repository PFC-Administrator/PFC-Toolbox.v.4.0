                    <th>Units</th>
                    <th></th>
                    <th>Weight</th>
                    <th>Total Sales</th>
                    <th>Units</th>
                    <th></th>
                    <th>Weight</th>
                    <th>Total Sales</th>
                    <th>Units</th>
                    <th></th>
                    <th>Trend</th>
                </tr>
